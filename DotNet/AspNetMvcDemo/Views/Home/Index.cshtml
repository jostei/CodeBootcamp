@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Web calculator</h1>
    <p>Input two numbers in empty fields and click "Add numbers".</p>

  <label for="input1">First number:</label><br>
  <input type="number" id="input1"><br>

  <label for="input2">Second number:</label><br>
  <input type="number" id="input2"><br><br>

  <button id="sumButton">Add numbers</button><br><br>

  <p id="output"></p>

<!-- Odotetaan Scripts osiota ennen suorittamista -->
@section Scripts
{
  <script type="text/javascript">
    $("#sumButton").click(
        function()
        {
        const luku1 = $("#input1").val();
        const luku2 = $("#input2").val();

        $("#output")[0].innerHTML = parseInt(luku1)+parseInt(luku2);
        }
    );

  </script>
}

<p></p>

</div>
